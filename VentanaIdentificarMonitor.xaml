<Window x:Class="AdmCompEscritorio.VentanaIdentificarMonitor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="512" Width="512"
        WindowStyle="None"
        WindowStartupLocation="Manual"
        AllowsTransparency="True"
        Background="#00000000"
        Loaded="Window_Loaded" Topmost="True" ShowInTaskbar="False" ResizeMode="NoResize" IsHitTestVisible="False" Unloaded="Window_Unloaded">
    <Grid x:Name="Grid">
        <Grid.Effect>
            <DropShadowEffect RenderingBias="Quality" ShadowDepth="9" BlurRadius="3"/>
        </Grid.Effect>
        <TextBlock x:Name="Number" Margin="0" TextWrapping="Wrap" Text="1" Foreground="White" FontFamily="Arial" FontSize="300" IsHitTestVisible="False" TextAlignment="Right" FontWeight="Bold">
            <TextBlock.Effect>
                <DropShadowEffect ShadowDepth="0" BlurRadius="24"/>
            </TextBlock.Effect>
        </TextBlock>
    </Grid>
</Window>
